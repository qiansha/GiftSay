<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/list_detali_single_vp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/list_detail_single_point_ll"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/home_sele_point_marbottom"
            android:orientation="horizontal" />
        </FrameLayout>
        <TextView
            android:id="@+id/list_detail_single_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:layout_margin="10dp"
            android:textColor="#252424"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFFF0033"/>
            <TextView
                android:id="@+id/list_detail_single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222"
                android:textColor="#FFFF0033"/>
        </LinearLayout>
        <TextView
            android:id="@+id/list_detail_single_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3333333333"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#b6b2b2"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你可能也喜欢"
                android:layout_centerInParent="true"
                android:background="#fff"
                android:textColor="#b6b2b2"
                android:padding="10dp"
                android:textSize="13sp"/>
        </RelativeLayout>
       <android.support.v7.widget.RecyclerView
           android:id="@+id/list_detail_single_rv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff"/>



    </LinearLayout>

</ScrollView>