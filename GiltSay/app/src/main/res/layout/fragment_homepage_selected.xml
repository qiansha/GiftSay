<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <!--android:fillViewport="true"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_weight="1"-->
        <!--android:src="@mipmap/abc_ab_bottom_solid_dark_holo9" />-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <!--<com.lanou3g.giltsay.view.ChildViewPager-->
            <!--android:id="@+id/homepage_sele_rotate_vp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="180dp"/>-->
            <android.support.v4.view.ViewPager
                android:id="@+id/homepage_sele_rotate_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/homepage_sele_rotate_point_ll"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homepage_selected_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />


        <LinearLayout
            android:id="@+id/home_sele_text_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="更新时间" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="更新时间" />


            <com.lanou3g.giltsay.view.HomeListView
                android:id="@+id/homepage_selected_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>