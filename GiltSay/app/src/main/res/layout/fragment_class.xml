<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/class_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF0033"/>

    <EditText
        android:id="@+id/class_search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"

        android:drawableLeft="@mipmap/icon_search_grey"
        android:background="@drawable/rounded_class_search"
        android:text="中秋佳节送好礼"
        android:textColor="#868686"

        android:drawablePadding="3dp"


        android:layout_margin="10dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/class_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>