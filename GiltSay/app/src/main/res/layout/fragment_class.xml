<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <!--分类页面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_class_bgtab"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <android.support.design.widget.TabLayout
            android:id="@+id/class_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/color_class_bgtab" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/class_view_height"
        android:background="@color/color_class_bgtab" />

    <TextView
        android:id="@+id/class_search_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_class_search"
        android:drawableLeft="@mipmap/icon_search_grey"
        android:drawablePadding="@dimen/class_et_img_pad"
        android:layout_margin="7dp"
        android:paddingLeft="@dimen/class_et_padleft"
        android:paddingTop="@dimen/class_et_padingtop"
        android:paddingBottom="@dimen/class_et_padingtop"
        android:text="中秋佳节送好礼"
        android:textColor="@color/color_class_editview"
        android:textSize="@dimen/class_et_textsize" />

    <android.support.v4.view.ViewPager
        android:id="@+id/class_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"/>

</LinearLayout>