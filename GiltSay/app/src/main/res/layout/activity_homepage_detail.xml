<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/home_detail_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF0033">

    <ImageView
        android:id="@+id/home_detail_goback_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/credit_btn_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="攻略详情"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/home_detail_more_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:text="查看全集" />
    </RelativeLayout>

    <WebView
        android:id="@+id/home_detail_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_detail_title_ll"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_heart_unselected" />

            <TextView
                android:id="@+id/home_detail_like_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12332" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_detail_share_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_share_up" />

            <TextView
                android:id="@+id/home_detail_zhuanfa_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12332" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_action_compact_comment" />

            <TextView
                android:id="@+id/home_detail_talk_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12332" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>