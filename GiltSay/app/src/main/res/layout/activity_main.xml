<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_repace_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868686"/>
    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/homepage_rbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:button="@null"
            android:background="@drawable/selected_homepage"


            />
        <RadioButton
            android:id="@+id/list_rbtn"
            android:layout_marginLeft="60dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:background="@drawable/selected_list"
            />
        <RadioButton
            android:id="@+id/class_rbtn"
            android:layout_marginLeft="60dp"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:button="@null"
            android:background="@drawable/selected_class"/>

        <RadioButton
            android:id="@+id/person_rbtn"
            android:layout_marginLeft="60dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:background="@drawable/selected_person"/>
    </RadioGroup>

</LinearLayout>