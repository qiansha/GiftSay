<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_list_top_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/list_top_text"
            android:textColor="@color/color_list_textcolor"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/list_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/list_imgmar"
            android:background="@mipmap/attendance_share_icon" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/list_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/list_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>